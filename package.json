{
  "name": "feedly",
  "version": "1.0.0",
  "description": "organize, read and share what matters to you.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/Asutorufa/electron-feedly",
  "keywords": [
    "feedly",
    "Electron"
  ],
  "build": {
    "appId": "com.asutorufa.electron-feedly",
    "asar": true,
    "files": [
      "./build/**/*",
      "./js/*",
      "./css/*",
      "./app/*",
      "./main.js"
    ],
    "linux": {
      "category": "Network",
      "packageCategory": "internet",
      "description": "feedly client",
      "target": [
        "AppImage"
      ],
      "desktop": {
        "Name": "electronFeedly",
        "Comment": "organize, read and share what matters to you."
      },
      "maintainer": "${author}"
    },"mac": {
      "icon": "build/icons/icon.png"
    },
    "win": {
      "publish": [],
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "7z",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "multiLanguageInstaller": true
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "author": "asutorufa",
  "license": "BSD 2-Clause Simplified",
  "devDependencies": {
    "electron": "^6.0.3",
    "electron-builder": "^21.2.0"
  }
}
