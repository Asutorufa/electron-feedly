{
    "name": "feedly",
    "version": "1.0.0",
    "description": "organize, read and share what matters to you.",
    "scripts": {
        "build": "tsc && cp -r ./src/public/* ./dist/",
        "watch": "tsc -w",
        "lint": "eslint -c .eslintrc --ext .ts ./src",
        "start": "npm run build && electron ./dist/main.js",
        "dist": "npm run build && electron-builder"
    },
    "main": "main.js",
    "build": {
        "appId": "com.asutorufa.electron-feedly",
        "productName": "electron-feedly",
        "asar": true,
        "files": [
            "package.json",
            {
                "from": "./dist/",
                "to": ".",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "linux": {
            "icon": "./dist/icons",
            "category": "Network",
            "packageCategory": "Network",
            "description": "organize, read and share what matters to you.",
            "desktop": {
                "Name": "electron-feedly",
                "Comment": "organize, read and share what matters to you."
            },
            "maintainer": "${author}"
        },
        "win": {
            "icon": "./dist/icons/icon.ico"
        },
        "directories": {
            "output": "./product"
        },
        "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "repository": "https://github.com/Asutorufa/electron-feedly",
    "keywords": [
        "Electron",
        "feedly"
    ],
    "author": "asutorufa",
    "license": "BSD-2-Clause",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "electron": "^22.0.1",
        "electron-builder": "^23.6.0",
        "electron-packager": "^17.1.1",
        "eslint": "^7.32.0",
        "typescript": "^4.5.5"
    }
}
