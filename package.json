{
  "name": "feedly",
  "version": "1.0.0",
  "description": "organize, read and share what matters to you.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/Asutorufa/electron-feedly",
  "keywords": [
    "feedly",
    "Electron"
  ],
  "build": {
    "appId": "com.asutorufa.electron-feedly",
    "asar": true,
    "files": [
      "./build/**/*",
      "./js/*",
      "./css/*",
      "./app/*",
      "./main.js"
    ],
    "linux": {
      "category": "Network",
      "packageCategory": "internet",
      "icon": "build/icons",
      "description": "feedly client",
      "target": [
        "AppImage"
      ],
      "desktop": {
        "Name": "electronFeedly",
        "Icon": "build/icons/feedly.svg",
        "Comment": "organize, read and share what matters to you."
      },
      "maintainer": "${author}"
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "author": "asutorufa",
  "license": "BSD 2-Clause Simplified",
  "devDependencies": {
    "electron": "^3.0.7",
    "electron-builder": "^21.2.0"
  }
}
